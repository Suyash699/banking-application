<%- include("partials/header"); -%>

            <center style="margin-top:5rem;">
                <h2>Transaction History</h2>
            </center>
            <div class="container " style="padding:0px;">
                <div class="col-lg-12" style="padding:0px;">
                    <br><br>
                    <h1 class="text-warning text-center"> </h1>
                    <br>
                    <table id="tabledata" class=" table table-hover table-bordered cs">

                        <tr class="bg-light text-black text-center">

                            <th>Transaction ID</th>
                            <th>Sender's name </th>
                            <th>Recipient's Name </th>
                            <th>Sender's Account Number</th>
                            <th>Recipient's Account Number</th>
                            <th>Transacted Amount</th>
                            <th>Message</th>

                        </tr>
                        <% allTransactions.forEach(function(transaction){%>
                            <tr class="bg-light text-black text-center">
                                <td>
                                    <%=transaction._id%>
                                </td>
                                <td>
                                    <%=transaction.sName%>
                                </td>
                                <td>
                                    <%=transaction.rName%>
                                </td>
                                <td>
                                    <%=transaction.sAccount%>
                                </td>
                                <td>
                                    <%=transaction.rAccount%>
                                </td>
                                <td>
                                    <%=transaction.tAmount%>
                                </td>
                                <td>
                                    <%=transaction.message%>
                                </td>
                            </tr>

                            <% }) %>
                    </table>
                </div>
            </div>
            <br>

            <div class="text-center pb-2">
                <a href="/customerList" class="btn btn-primary">
                    <i class="fa fa-check mr-2"></i>Check Balance
                </a>
            </div>
            <br>

            <%- include("partials/footer"); -%>